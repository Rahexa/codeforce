import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        int n = sc.nextInt();
        int c = 0;
        
        for (int i = 0; i < n; i++) {
            int petya = sc.nextInt();
            int vasya = sc.nextInt();
            int tonya = sc.nextInt();
            
            int count = petya + vasya + tonya;
            
            if (count >= 2) {
                c++;
            }
        }
        
        System.out.println(c);
        
        sc.close();
    }
}
