import java.util.Scanner;

public class Main {
    
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println();
        int n = sc.nextInt();
        int k = sc.nextInt();

        String combinedIndices = "";
        for (int i = 1; i <= n; i = i + 2) {
            combinedIndices = combinedIndices.concat(i + " ");
        }

        for (int j = 2; j <= n; j = j + 2) {
            combinedIndices = combinedIndices.concat(j + " ");  
            }



        String[] numbers = combinedIndices.split(" ");
        	
        	
        	
        	
        System.out.println(Integer.parseInt(numbers[k - 1]));
        
        
        
        
        sc.close();
    }
}
