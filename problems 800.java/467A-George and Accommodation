import java.util.Scanner;

public class Main {
    
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println();
        int n = sc.nextInt();
        
        int count = 0;
        for(int i = 0;i<n;i++) {
        	int ith = sc.nextInt();
        	int q = sc.nextInt();

        	
        	if(q - ith>=2 ) {
count++;        	}
        	
        	
        	
        }
        
    	
    	System.out.println(count);
    	
        
     
    }
}
